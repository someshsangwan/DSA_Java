{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "C++: g++ build and debug active file",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,  // This opens the program output in a new terminal window
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "miDebuggerPath": "C:/MinGW/bin/gdb.exe",
        "preLaunchTask": "build active file",
        "serverLaunchTimeout": 10000,
        "internalConsoleOptions": "neverOpen"  // Avoid showing debug info in the internal console
      }
    ]
  }
  